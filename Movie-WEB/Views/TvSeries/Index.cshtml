@{
    ViewData["Title"] = "TV Series Index";
}
@model List<TvSeriesVM>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3>Diziler Listesi</h3>
            </div>
            <div class="card-body">
                <div class="table table-responsive-xl d-xl-table table-responsive-md table-responsive-sm table-sm table-responsive-lg table-responsive-xs ">
                    <table class="table table-responsive-md table-responsive-sm table-sm  table-responsive-lg table-responsive-xs table-hover">
                        <thead>
                            <tr>
                                <th>Adı</th>
                                <th>Açıklaması</th>
                                <th>Yayınlanma Tarihi</th>
                                <th>ImdbRating</th>
                                <th>Detay</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tvSeries in Model)
                            {
                                <tr>
                                    <td>@tvSeries.TvSeriesName</td>
                                    <td>@tvSeries.Description</td>
                                    <td>@tvSeries.ReleaseDateonly</td>
                                    <td>@tvSeries.ImdbRating</td>
                                    <td>
                                        <a asp-action="TvSeriesDetail" asp-route-id="@tvSeries.Id" class="btn btn-outline-success">Detay</a>
                                    </td>

                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>