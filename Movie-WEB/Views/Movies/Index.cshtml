@{
    ViewData["Title"] = "Movies Index";
}
@model List<MovieVM>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3>Filmler Listesi</h3>
            </div>
            <div class="card-body">
                <div class="table table-responsive-xl d-xl-table table-responsive-md table-responsive-sm table-sm table-responsive-lg table-responsive-xs ">
                    <table class="table table-responsive-md table-responsive-sm table-sm  table-responsive-lg table-responsive-xs table-hover">
                        <thead>
                            <tr>
                                <th>Adı</th>
                                <th>Açıklaması</th>
                                <th>Yayınlanma Tarihi</th>
                                <th>ImdbRating</th>
                                <th>Detay</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var movie in Model)
                            {
                                <tr>
                                    <td>@movie.MovieName</td>
                                    <td>@movie.Description</td>
                                    <td>@movie.ReleaseDateonly</td>
                                    <td>@movie.ImdbRating</td>
                                    <td>
                                        <a asp-action="MovieDetail" asp-route-id="@movie.Id" class="btn btn-outline-success">Detay</a>
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>